<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Fragment"
    tools:context=".InitActivity"
    android:padding="10dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="@string/goal_setting"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/goal_value"/>
    <EditText
        android:id="@+id/tv_init_goal_value"
        android:layout_width="match_parent"
        android:hint="0"
        android:textSize="20dp"
        android:textColor="@color/siam"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="@string/budget_setting"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/budget_value"/>
    <EditText
        android:id="@+id/tv_init_budget_value"
        android:layout_width="match_parent"
        android:hint="0"
        android:textSize="20dp"
        android:textColor="@color/siam"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="자산 설정"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="현재 금액"/>
    <EditText
        android:id="@+id/tv_init_money_value"
        android:layout_width="match_parent"
        android:hint="0"
        android:textSize="20dp"
        android:textColor="@color/siam"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_init_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/siam"
        android:text="완료"/>

</LinearLayout>
