<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogActivity"
        android:padding="10dp"
        android:background="@color/white"
        android:theme="@style/numberPad"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/category" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_income"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/income_icon"
                        android:gravity="center"
                        app:civ_border_overlay="true"
                        app:civ_border_width="2dp"
                        app:civ_circle_background_color="@color/white"/>
                    <TextView
                        android:id="@+id/tv_food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="월급"
                        app:layout_constraintTop_toBottomOf="@+id/civ_food"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_pocket_money"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/pocket_money_icon"
                        android:gravity="center"
                        app:civ_border_overlay="true"
                        app:civ_border_width="2dp"
                        app:civ_circle_background_color="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="용돈" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_extra_income"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/extra_income_icon"
                        android:gravity="center"
                        app:civ_border_overlay="true"
                        app:civ_border_width="2dp"
                        app:civ_circle_background_color="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="부수입" />
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_finance"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:src="@drawable/finance_icon"
                    app:civ_border_overlay="true"
                    app:civ_border_width="2dp"
                    app:civ_circle_background_color="@color/white" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="금융소득" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_refund"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/refund_icon"
                    android:gravity="center"
                    app:civ_border_overlay="true"
                    app:civ_border_width="2dp"
                    app:civ_circle_background_color="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="환급" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_change"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/change_icon"
                    android:gravity="center"
                    app:civ_border_overlay="true"
                    app:civ_border_width="2dp"
                    app:civ_circle_background_color="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="잔액수정" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_etc"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/etc_icon"
                    android:gravity="center"
                    app:civ_border_overlay="true"
                    app:civ_border_width="2dp"
                    app:civ_circle_background_color="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="기타" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_prev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="이전"/>
    </LinearLayout>