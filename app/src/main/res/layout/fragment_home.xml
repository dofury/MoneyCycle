<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Fragment"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <include layout="@layout/activity_toolbar"/>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:text="현재 자산:"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_money_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/won"
                            android:textSize="30dp" />
                        <TextView
                            android:id="@+id/tv_money_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30dp"
                            android:text="0"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5px"
                        android:background="@color/white_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="40dp"
                        android:text="@string/goal" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="25dp"
                            android:gravity="center"
                            android:text="@string/won"/>
                        <TextView
                            android:id="@+id/tv_goal_value"
                            android:layout_marginStart="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="25dp"
                            android:gravity="center"
                            android:text="0" />
                    </LinearLayout>
                    <com.king.view.circleprogressview.CircleProgressView
                        android:id="@+id/cpv_goal_percent"
                        android:layout_gravity="center"
                        android:layout_width="150dp"
                        app:cpvProgressColor="@color/blizzard_blue"
                        app:cpvNormalColor="@color/white_gray"
                        app:cpvProgress="0"
                        app:cpvShowTick="false"
                        android:layout_height="150dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="40dp"
                            android:text="@string/budget" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="25dp"
                                android:gravity="center"
                                android:text="@string/won"/>
                            <TextView
                                android:id="@+id/tv_budget_value"
                                android:layout_marginStart="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="25dp"
                                android:gravity="center"
                                android:text="0" />
                            <TextView
                                android:id="@+id/tv_plus_budget_value"
                                android:layout_marginStart="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/blue"
                                android:textSize="25dp"
                                android:gravity="center"
                                android:text="(+0)" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="20dp"
                            android:paddingStart="20dp">
                            <com.daimajia.numberprogressbar.NumberProgressBar
                                android:id="@+id/npb_budget_percent"
                                app:progress_reached_bar_height="10dp"
                                app:progress_unreached_bar_height="10dp"
                                app:progress_reached_color="@color/blizzard_blue"
                                app:progress_unreached_color="@color/white_gray"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="25dp"
                                android:gravity="center"
                                android:text="@string/won"/>
                            <TextView
                                android:id="@+id/tv_budget_remain_value"
                                android:layout_marginStart="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="25dp"
                                android:gravity="center"
                                android:text="0" />
                            <TextView
                                android:layout_marginStart="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="25dp"
                                android:gravity="center"
                                android:text="남음" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_money"
                                app:tint="@color/siam"
                                android:gravity="center" />
                            <TextView
                                android:id="@+id/tv_budget_remain_value_divide_value"
                                android:layout_marginStart="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="25dp"
                                android:gravity="center"
                                android:text="0" />
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_time"
                                android:gravity="center"
                                app:tint="@color/siam" />
                            <TextView
                                android:id="@+id/tv_remain_day_value"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="25dp"
                                android:gravity="center"
                                android:text="31" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="50dp"
                    android:text="       "/>
            </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:src="@drawable/ic_add"
        android:background="@color/siam"
        app:backgroundTint="#000000" />
</LinearLayout>